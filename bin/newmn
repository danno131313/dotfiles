#!/bin/bash

mkdir $1 && cd $1

mkdir client controllers models config 

npm init -y

npm install express body-parser mongoose express-session path ejs --save

cat "/home/danno131313/bin/mean-helper/server.js" > server.js
cat "/home/danno131313/bin/mean-helper/routes.js" > ./config/routes.js
cat "/home/danno131313/bin/mean-helper/mongoose.js" > ./config/mongoose.js
cat "/home/danno131313/bin/mean-helper/controller.js" > ./controllers/controller.js
